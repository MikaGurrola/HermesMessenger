.message-list-anon
	margin: 56px 0 93px 0
	padding: 0 15px
	p 
		margin: auto auto auto 0
		font-size: 14px
		line-height: 20px

.message-list
	margin: 15px 0 0 0
	padding: 25px 15px 0 15px
	p 
		margin: auto auto auto 0

.message
	display: flex
	margin: 15px auto
	img
		flex-shrink: 1
		margin-right: 15px
		width: 30px
		height: 30px
		clip-path: circle(50% at 50% 50%);
	p 
		flex-grow: 1
		font-size: 14px
		line-height: 20px

.compose-message
	position:fixed
	bottom: 0
	left: 0
	right: 0
	background-color: white
	padding: 15px
	box-shadow: $shadow1
	display: flex
	padding: 15px 15px 5px 15px
	button
		background-color: white
		color: $plum

.group
	position: relative
	width: 100%
	input
		font-size: 18px
		padding: 5px
		display: block
		width: 100%
		border: none
		border-bottom: 1px solid #757575
		&:focus
			outline: none
	label
		color: #999 
		font-size: 18px
		font-weight: normal
		position: absolute
		pointer-events: none
		left: 5px
		top: 5px
		transition: 0.2s ease all
		letter-spacing: 0.5px

/* active state */
input:focus ~ label, input:valid ~ label
	top: -10px
	font-size: 12px
	color: $plum

/* BOTTOM BARS ================================= */
.bar  
	position: relative 
	display: block 

.bar:before, .bar:after  
	content: ''
	height: 2px 
	width: 0
	bottom: 0 
	position: absolute
	background: $plum 
	transition: 0.2s ease all 
.bar:before
	left: 50%
.bar:after
	right: 50% 

/* active state */
input:focus ~ .bar:before, input:focus ~ .bar:after
	width: 50%

.bottom
	height: 50px
	margin-top: 65px




